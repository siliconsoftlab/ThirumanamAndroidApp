<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="8dp"
                                    android:layout_marginBottom="32dp"
                                    app:cardElevation="10dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="150dp"
                                                      android:layout_height="150dp"

                                                      tools:srcCompat="@tools:sample/avatars"
                                                      android:src="@drawable/ic_launcher_foreground"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                                                      android:layout_marginTop="16dp"
                                                      app:layout_constraintTop_toTopOf="parent"
                                                      android:id="@+id/circleImageView"
                                                      android:layout_marginBottom="16dp"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:textSize="24sp"
                android:text="Saravanan" android:textAppearance="@style/TextAppearance.AppCompat.Body2"

                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/circleImageView"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:autoSizeTextType="uniform"/>
        <TextView
                android:text="28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ageTv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nameTv"
                app:layout_constraintStart_toEndOf="@+id/circleImageView" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text=" Yrs,"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nameTv" app:layout_constraintStart_toEndOf="@+id/ageTv"
        />
        <TextView
                android:text="55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weightTv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nameTv" app:layout_constraintStart_toEndOf="@+id/textView6"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <TextView
                android:text=" Kg,"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nameTv" app:layout_constraintStart_toEndOf="@+id/weightTv"
        />
        <TextView
                android:text="5.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heightTv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nameTv" app:layout_constraintStart_toEndOf="@+id/textView8"
                android:layout_marginLeft="12dp" android:layout_marginStart="12dp"/>
        <TextView
                android:text=" Ft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nameTv" app:layout_constraintStart_toEndOf="@+id/heightTv"
        />
        <TextView
                android:text="B.E.,"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:id="@+id/eduTv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/circleImageView" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="Software Engg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jobTv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/eduTv" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Chennai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeTv" app:layout_constraintStart_toEndOf="@+id/circleImageView"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/eduTv"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>